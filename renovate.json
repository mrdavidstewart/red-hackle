{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "schedule": ["at 8:30am on Monday through Friday"],
  "packageRules": [
    {
      "matchManagers": ["npm"],
      "rangeStrategy": "bump"
    }
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true,
    "schedule": ["at 8:30am on Monday through Friday"]
  },
  "ignorePaths": ["**/node_modules/**", "**/bower_components/**", "**/vendor/**"],
  "postUpdateOptions": ["pnpmDedupe"],
  "packageManager": "pnpm"
}
